<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <h1>Blogs</h1>
      
      <table>
        <thead>
          <tr>
            <th>Content</th>
            <th>Image</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= blog.content %></td>
              <td><%= image_tag blog.image %></td>
              <td><%= link_to '詳細', blog %></td>
              <td><%= link_to '編集', edit_blog_path(blog) %></td>
              <td><%= link_to '削除', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to '新規投稿', new_blog_path %>
    </div>
  </div>
</div>
